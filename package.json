		"vite": "^6.2.2",
		"vitest": "^3.0.9"
	},
	"type": "module",
	"dependencies": {
		"@prisma/client": "^6.5.0",
		"dotenv": "^16.4.7",
		"js-base64": "^3.7.7",
		"luxon": "^3.5.0",
		"sanitize-html": "^2.15.0"
	}
